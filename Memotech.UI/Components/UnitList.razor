@using Microsoft.AspNetCore.Components.Web
@using Memotech.UI.Models
@using Memotech.UI.Services
@inject JsonFileUnitService UnitService

<h3>Unit list</h3>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Term</th>
            <th scope="col">Meaning</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in UnitService.GetUnits())
        {
        <tr>
            <td>@unit.Term</td>
            <td>@unit.Meaning</td>
            <td>
                <small class="text-muted">
                    <button type="button" class="btn btn-primary" @onclick="(e => SelectUnit(unit.ID))" 
                        data-bs-toggle="modal" data-bs-target="#unitModal">More</button>
                </small>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (selectedUnit != null)
{
    <div class="modal fade" id="unitModal" tabindex="-1" aria-labelledby="unitModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="unitModalLabel">@selectedUnit.Term</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>@selectedUnit.Meaning</p>
          </div>
          @*<div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>*@
        </div>
      </div>
    </div>
}

@code {
    int selectedUnitId;
    Unit? selectedUnit;

    void SelectUnit(int unitId)
    {
        selectedUnitId = unitId;
        selectedUnit = UnitService.Get(unitId);
    }
}
