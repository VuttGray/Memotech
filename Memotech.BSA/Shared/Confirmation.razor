@if (displayConfirmation)
{
    <div class="modal-backdrop show"></div>

    <div class="modal fade show" id="confirmationModal" tabindex="-1" role="dialog"
    aria-labelledby="confirmationModal" aria-hidden="true" style="display: block">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button @onclick="onCancel" type="button" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Body
                </div>
                <div class="modal-footer">
                    <button @onclick="onConfirm" type="button" class="btn btn-primary">OK</button>
                    <button @onclick="onCancel" type="button" class="btn btn-primary">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    bool displayConfirmation;

    [Parameter] 
    public string Title { get; set; } = "Confirm";
    [Parameter] 
    public RenderFragment Body { get; set; }
    [Parameter] 
    public EventCallback onConfirm { get; set; }
    [Parameter] 
    public EventCallback onCancel { get; set; }

    public void Show() => displayConfirmation = true;
    public void Hide() => displayConfirmation = false;
}
