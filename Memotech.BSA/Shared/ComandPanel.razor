@inject NavigationManager navManager

<div class="row m-1">
    <div class="col text-md-start">
    </div>
    <div class="col text-md-end">
        @if (Entity is not null && Entity.Id > 0)
        {
            <button class="btn btn-primary" @onclick="@(e => Action("edit" + (Entity is null ? "" : "/" + Entity.Id)))">Edit</button>
        }
        @if (Entity is not null)
        {
            <button class="btn btn-primary" @onclick="@(e => Save.InvokeAsync(Entity))">Save</button>
        }
        <button class="btn btn-primary" @onclick="@(e => Action(""))">Close</button>
        <button class="btn btn-primary" @onclick="@(e => Action(""))">Cancel</button>
    </div>
</div>

@code {
    [Parameter] public BaseEntity? Entity { get; set; }
    [Parameter] public EventCallback<BaseEntity> Save { get; set; }
    
    void Action(string action)
    {
        navManager.NavigateTo($"/memos/{action}");
    }
}
