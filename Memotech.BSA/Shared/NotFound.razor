@inject NavigationManager NavigationManager

<div class="row">
    <div class="col text-center">
        <img src="./images/404.png" class="height: 500px;" />
    </div>
    <div class="col text-center">
        <div class="row">
            <h1>Page Not Found</h1>
            <p class="text-start">
                We can't find the page you're looking for.<br />
                You can either return to the previous page,
                visit our homepage or contact our support team.
            </p>
            <div class="col">
                <button type="button" class="btn btn-primary" @onclick="NavigateToHomePage">Visit Homepage</button>
                <button type="button" class="btn btn-secondary">Contact Us</button>
            </div>
        </div>
    </div>
</div>

@code {
    void NavigateToHomePage()
    {
        NavigationManager.NavigateTo("/");
    }
}
